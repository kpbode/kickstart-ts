{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "rootDir": "src/cli",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src/cli",
    "typeRoots": [ "./node_modules/@types", "./src/@types" ],
    "outDir": "bin"
  },
  "exclude": [
    "node_modules", "templates"
  ],
  "ts-node": {
    "files": true
  }
}
