{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,
    "rootDir": "src/cli",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src/cli",
    "typeRoots": [ "./node_modules/@types", "./src/@types" ],
    "outDir": "bin"
  },
  "exclude": [
    "node_modules", "templates"
  ],
  "ts-node": {
    "files": true
  }
}
